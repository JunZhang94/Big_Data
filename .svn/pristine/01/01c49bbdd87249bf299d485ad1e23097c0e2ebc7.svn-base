@charset "utf-8";

html, body {
    margin: 0;
    padding: 0;
    overflow: hidden;
    height: 100%;
}

body {
    font-family: arial,'Hiragino Sans GB','Microsoft Yahei',"\u5fae\u8f6f\u96c5\u9ed1",sans-serif !important;
}

.pos2 {
    width: 960px;
    margin: 0 auto;
    text-align: right;
}

.us, .pw {
    border: 2px solid #DFDDDF;
    width: 285px;
    height: 32px;
    line-height: 32px;
    padding-left: 10px;
    margin-left: 13px;
    float: right;
}

.login {
    width: 151px;
    height: 39px;
    background-repeat: no-repeat;
    border: none;
    cursor: pointer;
}

.login {
    cursor: pointer;
    background: url(../images/btn_logon_a.png);
    margin-left: 100px;
    margin-top: 35px;
}

.login-hover {
    width: 151px;
    height: 39px;
    background-repeat: no-repeat;
    border: none;
    cursor: pointer;
}

.login-hover {
    cursor: pointer;
    background: url(../images/btn_logon_b.png);
    margin-left: 100px;
    margin-top: 35px;
}

.kpi {
    width: 175px;
    height: 75px;
    border: none;
    cursor: pointer;
    background-repeat: no-repeat;
    float: right;
}

.kpi-normal {
    background: url(../images/kpiBtn.png);
}

.kpi-hover {
    background: url(../images/kpiBtn_hover.png);
}

#kpiLogin {
    width: 960px;
    margin: 0 auto;
    margin-top: 360px;
    padding-top: 100px;
    background: url(../images/login_title.png) no-repeat right top;
}

#usernameLogin {
    float: right;
    width: 175px;
    cursor: pointer;
    font-family: Tahoma,Arial,"Helvetica Neue","Hiragino Sans GB",Simsun,sans-self;
    text-align: center;
    color: #fff;
    font-size: 18px;
    font-weight: bold;
}

.hide {
    display: none;
}

.copyright {
    color: #ffffff;
    font-size: 13px;
    width: 500px;
    margin: 0 auto;
}

