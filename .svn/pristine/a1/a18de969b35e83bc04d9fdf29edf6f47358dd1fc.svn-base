@charset "utf-8";

* {
	margin: 0;
	padding: 0;
}

body {
	font-size: 12px;
	line-height: 18px;
	color: #343434;
	background: #f4f4f4;
	font-family: Arial, Helvetica, sans-serif;
}
.text-area p{
	text-indent:2em
}

.text-area span{
    color:#868686;
    font-falily:aril;
}

.text-area strong{
    color:red;
    font-falily:aril;
    font-size:14px;
}

.text-list strong{
	color:#373737;
	font-size:12px;}

html, body {
	height:100%;
}

img {
	border: 0;
}

a {
	text-decoration: none;
	color: #343434;
}

a:link,a:hover {
	text-decoration: none;
}

a:hover {
	color: #f55c26;
}

table {
	width: 100%;
	border-collapse: collapse;
}

table.search {
	border: 1px solid #ccc;
	border-top: none;
}

table.search td {
	padding: 2px;
}

table.search th {
	padding: 2px;
	font-size: 12px;
	font-weight: bold;
}

.tab thead {
	font-size: 12px;
	font-weight: bold;
	background-color: #E9E9EB;
}

.tab td, .tab th {
	border: 1px solid #ccc;
	height: 20px;
	padding: 5px;
}

.content {
	font-size: 12px;
}

.toolbar {
	padding: 8px 5px 2px 5px;
	*padding: 6px 5px 2px 7px;
	background-color: #E9E9EB;
	border: 1px solid #ccc;
	*width: 100%;
	height: 38px;
	*height: 41px;
}

.toolbar input {
	margin-right: 5px;
	*margin-right: 0;
}

.button {
	background-color: #B8B8B8;
	color: white;
}

.line {
	margin: 5px 0;
	border: 1px solid dotted;
}