* { margin: 0px; padding: 0px; }
body { overflow: hidden; font: 14px Arial, "微软雅黑"; }
a, a:hover, a:link, a:visited, a:active { text-decoration: none; }
:focus, a:focus { outline: 0; outline: none; }/*css去掉a标签点击后的虚线*/
* { -webkit-text-size-adjust: none; } /*解决webkit内核浏览器强制最小字体*/
/*去掉链接（包括图片链接）的虚线边框*/ 
a, area { blr:expression(this.onFocus=this.blur())
}
:focus { outline: none; }/* for Firefox */
div, ul, dl, dt, dd { margin: 0; padding: 0; list-style: none; }
body, td, input, select, textarea { font-family: "宋体", Helvetica, sans-serif; font-size: 14px; }
img { border: 0; }
form { margin: 0 }
input, select { vertical-align: middle; }
input[type=text], input[type=password], textarea { border: #d7d7d7 1px solid; color: #646464 }
hr { border-top: rgba(225,225,225,0.5) 1px dotted; border-top: #e1e1e1 1px dotted\9; border-bottom: none; background: none; border-left: none; border-right: none; padding: 0; margin: 35px auto; clear: both; }
/*css3过渡效果*/
a, li, p, span { transition: background-color 0.3s; -webkit-transition: background-color 0.3s; -moz-transition: background-color 0.3s; -o-transition: background-color 0.3s; }
/*----------------top
----------------*/
.top { height: 50px; width: 100%; position: absolute; z-index: 100; background-repeat: repeat-x; background-color: #004986; border-bottom: 0px solid #333; }
.clear { clear: both; }
.logo { width: 420px; height: 50px; float: left; margin-left: 24px; }

.menu{height:60px;display:block;float: right;}
.menu ul{list-style:none;padding:0;margin:0;}
.menu ul li{float:left;overflow:hidden;position:relative;line-height:50px;text-align:center;}
.menu ul li a{position:relative;display:block;width:105px;height:50px;font-family:"微软雅黑", "宋体";font-size:16px;text-decoration:none;cursor:pointer;font-weight:bold;line-height:50px;}
.menu ul li a span{position:absolute;left:0;width:111px;}
.menu ul li a span.out{top:0px;}
.menu ul li a span.over,  .menu ul li a span.bg{top:-60px;}
#menu2 ul li a{color:#FFFFFF;}
#menu2 ul li a span.over{color:#FFF;height:50px;width:111px;background-image:url(../../images/w_03.jpg);background-repeat:repeat;}
.menu ul li a span.test{top:-90px;}
#menu2 ul li a span.test{color:#FFF;height:50px;width:111px;background-image:url(../../images/w_03.jpg);background-repeat:repeat;}

/*----------------metro
----------------*/
.frame { position: absolute; left: 0px; width: 100%; height: 100%; overflow: hidden; }
.bottom { background-color: #25333e; height: 30px; line-height: 30px; text-align: center; color: #FFF; position: absolute; bottom: 0px; width: 100%; left: 0px; border-top: 0px solid #CCC; }
.lscreen { position: absolute; width: 1400px; height: 100%; top: 150px; }
.screen { float: left; }
.framescreen { width: 100%; background-color: #00CC00; height: 100%; display: none; padding-top: 60px; }
.pcells { width: 1045px; margin-left: auto; margin-right: auto; padding-top: 30px; }
.pcells_temp { width: 1045px !important;; margin-left: auto; margin-right: auto; padding-top: 30px; }
.pcell { width: 124px; height: 148px; margin: 5px; float: left; }
.pcell img:hover { opacity: 0.8; }
.cancel { width: 216px; height: 136px; margin: 10px; float: left; }
.banner_common { position: relative; width: 1090px; margin: 0 auto; height: 100%; }
.banner_pre { position: absolute; top: 50%; left: 0; margin-top: -30px; width: 60px; height: 60px; cursor: pointer; background: url(../images/banner_btn_l_24.png) no-repeat; cursor: pointer; }
.banner_next { position: absolute; top: 50%; right: 0; margin-top: -30px; width: 60px; height: 60px; cursor: pointer; background: url(../images/banner_btn_r_24.png) no-repeat; cursor: pointer; }
.firstPage {
	top : 50px !important;
}